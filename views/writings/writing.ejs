<% const {description, title, createdAt, categories} = article %>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BLOG</title>
    <link rel="icon" type="image/x-icon" href="">
    <link rel="stylesheet" href="/public/styles/writings/writing.css">
</head>
<body>
    <header>
    </header>

    <main class="content">
        <h1><%=title%></h1>
        <h3><%=createdAt.toUTCString()%></h3>
        <div>
        <%categories.forEach((c, i) => { %>
            <% let catString = c.dataValues.name %>
            <%if(i !== categories.length-1){ %>
                <% catString += ',' %>
           <% }%>
            <span><%=catString%></span>
       <% }) %>
        </div>
        <hr>
        <%-description%>
    </main>

    <footer>
        <a id="back" href="/blog/writings"><<<<<<<< WRITINGS</a><br><br>
        <a id="rss" href="/blog/rss" target="_blank">
        <img src="/public/images/icons/rss.png"></a>
    </footer>
</body>
</html>